
apply Service "ESX:ifInDiscards" {
        import "generic-service"
        display_name ="ESX:ifInDiscards"
        check_command ="check_snmp_errors"
        vars.snmp_address = host.name
        vars.snmp_oid = .1.3.6.1.2.1.2.2.1.13
        vars.snmp_comment = ifInDiscards
        assign where match("*resesx*", host.name)
}


